<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleTuner" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/background</item>
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/background</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_baseline_tune_24</item>
        <item name="android:navigationBarColor">@color/background</item>
    </style>

    <style name="button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/colorPrimaryVariant</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textSize">24sp</item>
    </style>
</resources>